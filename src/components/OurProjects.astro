---
import close from "./../assets/images/close.png";
import bloodRiver from "./../assets/images/bloodRiver.png";
import monello from "./../assets/images/monello.png";
import mascotSite from "./../assets/images/mascotSite.png";
---

<div class="ourProjectsSection grid grid-cols-1 md:grid-cols-3 p-8">
  <div
    class="siteWrapper m-8 h-[90vh] w-[25em] bg-white rounded drop-shadow-lg overflow-hidden"
  >
    <img
      class="webSiteImg"
      src={bloodRiver}
      width="100%"
      height="100%"
      alt="siteImage"
    />
  </div>
  <div
    class="siteWrapper m-8 h-[90vh] w-[25em] bg-white rounded drop-shadow-lg overflow-hidden"
  >
    <img
      class="webSiteImg"
      src={monello}
      width="100%"
      height="100%"
      alt="siteImage"
    />
  </div>
  <div
    class="siteWrapper m-8 h-[90vh] w-[25em] bg-white rounded drop-shadow-lg overflow-hidden"
  >
    <img
      class="webSiteImg"
      src={mascotSite}
      width="100%"
      height="100%"
      alt="mascot"
    />
  </div>
</div>

<script>
  const siteWrapper = document.querySelectorAll(".siteWrapper");
  for (let index = 0; index < siteWrapper.length; index++) {
    let animation = gsap.to(siteWrapper[index], { paused: true, scrollTo: "max", duration: 10 });
    siteWrapper[index].addEventListener("mouseenter", () => animation.play());
    siteWrapper[index].addEventListener("mouseleave", () => animation.reverse());
  }
</script>
