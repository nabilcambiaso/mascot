---
import n3 from '../assets/images/n3.webp'
---
<section class="text-gray-100 heroContainer">
	<div class="heroSectionContainer container flex flex-col justify-center p-6 mx-auto sm:py-12 lg:py-24 lg:flex-row ">
    <div class="flex lg:hidden xl:hidden 2xl:hidden items-center relative justify-center p-6 my-8  h-72 sm:h-80">
			<img src={n3} alt="mascot knight"  width="600px" class=" bg-scale-image object-contain h-72 sm:h-80 lg:h-96 xl:h-112 2xl:h-128">
      <div aria-hidden="true" class="bg-layers bg-scale w-36 h-36 m-auto blur-xl bg-gradient-to-r from-blue-900 via-violet-700 to-violet-500 rounded-full md:w-[30rem] md:h-[30rem] md:blur-3xl absolute z--1 opacity-[0.6]"></div>
		</div>
    <div class="heroSectionLeft w-100 flex flex-col justify-center p-6 text-center rounded-sm lg:max-w-md xl:max-w-lg lg:text-left">
			<h1 class="text-3xl font-[500] leading-none md:text-4xl">Unleash
				<span class="text-blue-600">Mascot</span>'s Marketing Magic - Take Your Business to the Next Level!
			</h1>
			<p class="mt-6 mb-8 text-lg sm:mb-12">Dominate the Search Rankings with Our Comprehensive SEO and Marketing Services
			</p>
			<div class="flex flex-col space-y-4 sm:items-center sm:justify-center sm:flex-row sm:space-y-0 sm:space-x-4 lg:justify-start">
				<a rel="noopener noreferrer" href="#" class="px-8 py-3 text-[1rem] font-semibold rounded bg-blue-700 text-white">Contact Us</a>
				<a rel="noopener noreferrer" href="#" class="px-8 py-3 text-[0.9rem] font-semibold border rounded border-gray-100">Discover more</a>
			</div>
		</div>
		<div class="heroSectionRight hidden lg:flex xl:flex 2xl:flex items-center relative justify-center p-6 mt-8 lg:mt-0 h-72 sm:h-80 lg:h-96 xl:h-112 2xl:h-128">
			<img src={n3} alt="mascot knight"  width="600px" class=" bg-scale-image object-contain h-72 sm:h-80 lg:h-96 xl:h-112 2xl:h-128">
      <div aria-hidden="true" class="bg-layers bg-scale w-36 h-36 m-auto blur-xl bg-gradient-to-r from-blue-900 via-violet-700 to-violet-500 rounded-full md:w-[30rem] md:h-[30rem] md:blur-3xl absolute z--1 opacity-[0.6]"></div>
		</div>
	</div>
</section>

<style>
  .bg-layers {
  -webkit-animation: filter-animation 2s infinite;
  animation: filter-animation 2s infinite;
}

.bg-scale {
  -webkit-animation: filter-animation 4s infinite;
  animation: filter-scale 4s infinite;
}
.bg-scale-image {
  animation: filter-scale-image 4s infinite;
}
.heroContainer{
  clip-path: circle(0%);
  background-color: blue;
  width: 100vw;
  height: 100vh;
}
.heroSectionLeft{
opacity: 0;
transform: translateY(-50px);
}
.heroSectionRight{
opacity: 0;
rotate: 180deg;
}
@-webkit-keyframes filter-animation {
  0% {
    -webkit-filter: hue-rotate(0deg);
  }
  50% {
    -webkit-filter: hue-rotate(45deg);
  }
  
  100% {
    -webkit-filter: hue-rotate(0deg);
  }
}

@keyframes filter-animation {
  0% {
    filter: hue-rotate(0deg);
  }
  50% {
    filter: hue-rotate(45deg);
  }
  100% {
    filter: hue-rotate(0deg);
  }
}

@keyframes filter-scale {
  0% {
    transform:scale(0.2);
  }
  50% {
    transform:scale(1.5);
    opacity: 0.3;
  }
  100% {
      transform:scale(.2);
  }
}
@keyframes filter-scale-image {
  0% {
    transform:scale(0.95);
  }
  50% {
    transform:scale(1);
  }
  100% {
      transform:scale(.95);
  }
}
</style>

<script >
 var tl = gsap.timeline({defaults:{duration: 2, ease:Back.easeOut.config(2)}})
 tl.to('.heroContainer',{clipPath:'circle(100%)', backgroundColor:'transparent'});
 tl.to('.heroSectionLeft', {opacity:1, y:"0px",stagger: 0.1},"0.4");
 tl.to('.heroSectionRight', {opacity:1, rotation:'0deg', stagger: 0.1},"0");
 tl.to('.heroContainer',{height:'auto'},"0.5"); 

</script>
